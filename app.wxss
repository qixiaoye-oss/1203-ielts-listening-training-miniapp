@import "style/default-styles.wxss";
@import "style/theme.wxss";
@import "style/loading-progress.wxss";
@import "style/button-group/button-group.wxss";

page {
  background-color: #ffffff;
  padding: 20px;
  line-height: 1.4;
  font-size: 15px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;

  /* 新样式---所有边框颜色 */
  --solid-border-color: rgba(0, 0, 0, 0.3);
  --dashed-border-color: rgba(0, 0, 0, 0.3);
  /* 用户页-主题色 */
  --theme-color: rgba(0, 123, 255, 1);
  --theme-bcakground-color: rgba(0, 123, 255, 0.15);
  /* 练习页主要颜色 */
  --question-color: rgba(0, 166, 237, 1);
  --question-bcakground-color: rgba(0, 166, 237, 0.15)
}

view {
  box-sizing: border-box;
}

.dis {
  opacity: 0.3;
}

/*swtich整体大小及背景色*/
.wx-switch-input {
  position: relative;
  right: -3px;
}

.no-data {
  text-align: center;
  padding: 20px;
  font-size: 14px;
  color: #7f7f7f;
  margin-bottom: 10px;
}


/* 精听句子样式 */
.lh18 {
  line-height: 1.8;
}

.narrator {
  position: absolute;
  top: -8px;
  left: 5px;
  transform: scale(0.4);
  transform-origin: left top;
  padding: 4px 8px;
  border-radius: 4px;
  z-index: 99;
}

.narrator_man {
  background-color: #04a6f2;
  color: #7fdefc;
}

.narrator_woman {
  background-color: #f6e5e3;
  color: #ff6146;
}

.intensive_sentence_text {
  background-color: #f2f2f2;
  padding: 2px 0;
  margin: 2px 0;
  margin-right: 5px;
  border-left: 3px solid var(--question-color);
  position: relative;
  z-index: 3;
}

.intensive_sentence_text_active {
  background-color: #d6e4fd;
}

.hidden_text {
  color: rgba(0, 0, 0, 0) !important;
}

/* 轻量点击动效 */
.tap-active {
  opacity: 0.7;
  transform: scale(0.98);
  transition: all 0.1s ease-out;
}