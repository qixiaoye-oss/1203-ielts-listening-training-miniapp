/* 句子块组件 - 包含原文（多片段）和翻译 */
.sentence-block {
  display: block;
}

/* 原文容器 */
.sentence-block__text-container {
  display: inline;
}

.sentence-block__text-container--hidden {
  color: rgba(0, 0, 0, 0);
}

/* 原文片段样式 */
.sentence-block__text {
  background-color: #f2f2f2;
  padding: 2px 0;
  margin: 2px 0;
  margin-right: 5px;
  border-left: 3px solid var(--question-color);
  position: relative;
  z-index: 3;
}

.sentence-block__text--active {
  background-color: #d6e4fd;
}

/* 翻译样式：字号14px，行高1.4，颜色rgba(0,0,0,0.5)，间距15px */
.sentence-block__translate {
  margin-top: 15px;
  font-size: 14px !important;
  line-height: 1.4 !important;
  color: rgba(0, 0, 0, 0.5) !important;
  font-weight: normal !important;
}

.sentence-block__translate--hidden {
  color: rgba(0, 0, 0, 0) !important;
}

/* ==================== 简洁模式（plain）==================== */
/* 用于列表场景，无背景色和边框 */
.sentence-block--plain .sentence-block__text {
  background-color: transparent;
  border-left: none;
  padding: 0;
  margin: 0;
}
