/* 句子块组件 - 包含原文（多片段）和翻译 */
.sentence-block {
  display: block;
}

/* 原文容器 */
.sentence-block__text-container {
  display: inline;
}

.sentence-block__text-container--hidden {
  color: rgba(0, 0, 0, 0);
}

/* 原文片段样式 */
.sentence-block__text {
  background-color: #f2f2f2;
  padding: 2px 0;
  margin: 2px 0;
  margin-right: 5px;
  border-left: 3px solid var(--question-color);
  position: relative;
  z-index: 3;
}

.sentence-block__text--active {
  background-color: #d6e4fd;
}

/* 翻译样式 */
.sentence-block__translate {
  margin-top: 15px;
  font-size: 14px;
  line-height: 1.4;
  color: rgba(0, 0, 0, 0.5);
}

.sentence-block__translate--hidden {
  color: rgba(0, 0, 0, 0);
}
