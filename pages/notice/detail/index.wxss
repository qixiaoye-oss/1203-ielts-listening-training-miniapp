.notice {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.notice__title {
  padding: 15px;
  border: 1px solid var(--dashed-border-color);
  border-radius: 9px;
}

.notice__content {
  padding: 15px;
  border: 1px solid var(--dashed-border-color);
  border-radius: 9px;
}

.btn-action image {
  margin-left: 0;
  margin-right: var(--button-icon-margin);
}

.img_rotate {
  transform: rotate(180deg);
}