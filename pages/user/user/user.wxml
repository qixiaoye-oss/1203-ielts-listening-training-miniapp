<import src="/templates/loading-progress.wxml" />
<template is="loadingProgress" data="{{loading, loadProgress}}" />
<!-- 加载失败重试 -->
<view class="load-error" wx:if="{{loadError}}">
  <view class="load-error__text">加载失败</view>
  <view class="load-error__btn" bindtap="retryLoad">点击重试</view>
</view>
<view class="user-page" wx:if="{{!loadError}}">
  <view class="user-info">
    <image class="user__avatar" src="{{user.headUrl}}" mode="cover" />
    <view class="user__nickname">
      <view>{{user.nickName || '微信用户'}}</view>
      <view class="user__no">（{{user.no}}）</view>
    </view>
  </view>
  <view class="menu-item menu-item--access" bind:tap="toUpdateUserInfo" hover-class="tap-active" hover-stay-time="100">修改用户信息</view>
  <view class="menu-item">版本号 {{version || '2.2.2'}}</view>
</view>