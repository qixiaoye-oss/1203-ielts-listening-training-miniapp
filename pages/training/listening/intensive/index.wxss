/* 基础样式 */
page {
  padding: 0;
  margin: 0;
  height: 100vh;
  box-sizing: border-box;
}

/* 圆饼进度容器 */
.audio-loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

/* 圆饼进度 */
.pie-progress {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 1px solid #ccc;
  box-sizing: border-box;
}

/* 加载提示文字 */
.audio-loading-text {
  margin-top: 16px;
  color: #333;
  font-size: 14px;
}

.page-wrapper {
  display: flex;
  flex-direction: column;
  height: calc(100vh - 165px);
  box-sizing: border-box;
}

.base-container {
  flex-shrink: 0;
  font-size: 15px;
  padding: 20px 20px 0 20px;
  color: var(--question-color);
}

text {
  line-height: 1;
}

/* 进度样式 */
.progress-cell {
  position: relative;
  width: 100%;
  box-sizing: border-box;
  height: 22px;
}

.progress-bg {
  width: 100%;
  height: 4px;
  background: rgba(0, 0, 0, 0.15);
}

.progress-sel-bg {
  width: 100%;
  position: relative;
  top: -4px;
  height: 4px;
  background-color: var(--question-color);
}

/* 提醒样式 */
.play-tips-cell {
  margin-bottom: 10px;
}


/* 内容样式 */
.pad_15r {
  margin: 0 7px;
}

.weui-actionsheet__cell_warn {
  color: #000000;
  border-top: 2px solid #d7d7d7;
}

/* 正文内容样式 */
.body {
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  min-height: 0;
  margin-top: 15px;
}

.label-container {
  width: 100%;
  height: 100%;
  padding-inline: 20px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.swiper-container {
  height: 100%;
  width: 100%;
}

.swiper-item-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transform: translate(0%, -2px) translateZ(0%，0px) !important;
}

.paragraph-cell {
  flex: 1;
  border: 1px solid var(--solid-border-color);
  border-radius: 9px;
  width: 100%;
  /* width: calc(100% - 20px); */
  box-sizing: border-box;
  padding: 15px;
  display: flex;
  flex-direction: column;
}

.paragraph-content-cell {
  line-height: 1.9;
  font-weight: bold;
  font-size: 18px;
  flex: 1;
}

.writing-cell {
  position: relative;
  border: 1px dashed var(--dashed-border-color);
  padding: 15px;
  line-height: 1.4;
}

.writing-label {
  font-size: 12px;
  line-height: 1;
  color: rgba(0, 0, 0, 0.3);
  margin-bottom: 12px;
}

textarea {
  width: 100%;
  font-size: 16px;
  line-height: 1.4;
  position: relative;
  z-index: 10000 !important;
}

.pl-class {
  color: rgba(0, 0, 0, 0.3);
  font-size: 16px;
  position: absolute;
  top: 40px;
  left: 15px;
  z-index: 10;
}

/* 按钮部分 */
.playback-rate {
  position: absolute;
  top: -8px;
  right: -6px;
  width: 30px;
  font-size: 10px;
  border-radius: 3px;
  text-align: center;
  background: var(--background-color-3);
}

/* 按钮样式覆盖 */

.btn-group-layout-split__header .btn-action:last-child {
  flex-shrink: 0;
  margin-left: auto;
}

.btn-group-layout-split__footer .btn-action {
  flex-shrink: 0;
  margin-left: auto;
}