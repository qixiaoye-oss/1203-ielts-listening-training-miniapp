/**
 * 精听笔记页面布局样式
 */

page {
  height: 100%;
  padding: 0;
  margin: 0;
  overflow: hidden;
}

/* PC端双栏布局 */
.windows {
  display: flex;
}

.body {
  width: 750rpx;
  height: 100vh;
}

.left-body {
  width: 40%;
  height: 100vh;
}

.intervals {
  height: calc(100vh - 40px);
  width: 1px;
  position: relative;
  top: 20px;
  background: var(--background-color-4);
}

.right-body {
  width: 60%;
  height: 100vh;
}

/* 句子样式已提取到公共组件 /components/sentence-text */

/* ==================== 按钮组特殊处理 ==================== */
/**
 * 本页面按钮组随列表滚动，不固定底部
 * 通过 .btn-page-bottom--inline 修饰类覆盖公共样式
 */
.btn-page-bottom--inline {
  position: static;
  margin: 20px;
}

/* 内联模式不需要蒙版 */
.btn-page-bottom--inline::before,
.btn-page-bottom--inline::after {
  display: none;
}
