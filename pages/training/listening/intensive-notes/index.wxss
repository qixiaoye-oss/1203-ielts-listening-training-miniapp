/**
 * 精听笔记页面布局样式
 */

page {
  height: 100%;
  padding: 0;
  margin: 0;
  overflow: hidden;
}

/* PC端双栏布局 */
.windows {
  display: flex;
}

.body {
  width: 750rpx;
  height: 100vh;
}

.left-body {
  width: 40%;
  height: 100vh;
}

.intervals {
  height: calc(100vh - 40px);
  width: 1px;
  position: relative;
  top: 20px;
  background: var(--background-color-4);
}

.right-body {
  width: 60%;
  height: 100vh;
}

