page {
  padding-top: 0;
  padding-bottom: 0;
  position: relative;
}

/* 顶部线性进度条（保留但隐藏，已弃用） */
.progress-box {
  position: fixed;
  top: 0;
  width: 100%;
  height: 2px;
  display: none;
}

/* 圆饼进度容器 */
.audio-loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

/* 圆饼进度 */
.pie-progress {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 1px solid #ccc;
  box-sizing: border-box;
}

/* 加载提示文字 */
.audio-loading-text {
  margin-top: 16px;
  color: #333;
  font-size: 14px;
}

image {
  width: 17px;
  height: 17px;
}

text {
  line-height: 1;
}

.page {
  height: 100vh;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 15px;
  padding-bottom: 20px;
  position: relative;
}

.header_container {
  margin-top: 20px;
  width: 100%;
  /* height: 10%; */
  border: var(--btn-border-theme-1);
  box-sizing: border-box;
  border-radius: 9px;
}

.header_title {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  gap: 10px;
  padding: 15px;
  line-height: 1;
}

.header_divider {
  width: 100%;
  height: var(--btn-border-width);
  background: var(--btn-border-color);
}

.header_slider {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 10px;
}

.information_bubble {
  display: flex;
  align-items: center;
  gap: 5px;
  border: 1px solid var(--solid-border-color);
  padding: 5px 15px;
  font-size: 14px;
  line-height: 1;
  border-radius: 28px;
}

.information_bubble image {
  width: 20px;
  height: 20px;
  flex-shrink: 0;
}

.content_container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-end;
  gap: 15px;
  width: 100%;
  flex-grow: 1;
  color: #000000;
  position: relative;
  padding-bottom: 15px;
}

.slider_con {
  width: calc(100% - 10px);
}

wx-slider .wx-slider-handle-wrapper {
  height: 6px;
}

/* 按钮样式覆盖 */
.btn-group-layout-split__footer {
  justify-content: space-between;
}