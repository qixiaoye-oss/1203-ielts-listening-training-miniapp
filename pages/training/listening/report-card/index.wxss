/* 页面容器 */
.report-card-page {
  box-sizing: border-box;
  position: relative;
}

/* 内容区域 - 给底部留出按钮组的空间，避免被遮挡 */
.report-card-page__content {
  padding-bottom: 140px;
  /* 为固定在底部的按钮组留出空间（按钮组高度约110px + 底部间距20px） */
}

.header_container {
  border: var(--btn-border-theme-1);
  box-sizing: border-box;
  border-radius: 9px;
  margin-bottom: 15px;
  line-height: 1;
}

.header_title {
  display: flex;
  flex-direction: row;
  gap: 10px;
  padding: 15px;
}

.report-card {
  border: 1px solid var(--question-color);
  border-radius: 9px;
  padding: 15px;
  display: flex;
  flex-direction: column;
  gap: 10px;
  margin-bottom: 15px;
}

.question {
  width: 100%;
  display: flex;
  align-items: center;
  gap: 10px;
}

.question__no {
  background-color: var(--question-bcakground-color);
  color: var(--question-color);
  flex-shrink: 0;
  width: 28px;
  height: 28px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border-radius: 3px;
  font-size: 12px;
}

.question__user-answer {
  flex-grow: 1;
  font-size: 14px;
}

.answer_wrong {
  color: #F8312F;
}

.right-answers {
  color: var(--question-color);
  font-weight: bold;
  line-height: 1.4;
  font-size: 16px;
  padding-left: 38px;
  margin-top: 10px;
}

