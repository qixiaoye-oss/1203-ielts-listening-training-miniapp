/* 不覆盖 page padding，使用全局默认的 padding: 20px */
/* 移除 overflow: hidden，否则会裁剪按钮组蒙版 */

/* 音频加载遮罩 */
.audio-loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

/* 圆饼进度 */
.pie-progress {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 1px solid #ccc;
  box-sizing: border-box;
}

/* 加载提示文字 */
.audio-loading-text {
  margin-top: 16px;
  color: #333;
  font-size: 14px;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: calc(100vh - 200px);
}

.empty-text {
  color: #999;
  font-size: 16px;
}

.windows {
  display: flex;
}

.body {
  width: 750rpx;
  height: 100vh;
}

.left-body {
  width: 40%;
  height: 100vh;
}

.intervals {
  height: calc(100vh - 40px);
  width: 1px;
  position: relative;
  top: 20px;
  background: var(--background-color-4);
}

.right-body {
  width: 60%;
  height: 100vh;
}

/* 小句子-选中 */
.sentence-text {
  background-color: var(--background-color-6);
  padding: 4px 0;
  margin-right: 5px;
  border-left: 3px solid var(--border-color-1);
  position: relative;
  z-index: 3;
}

.sentence-text-active {
  background-color: var(--background-color-3);
}

/* 小句子-讲述人 */
.narrator {
  position: absolute;
  top: -8px;
  left: 5px;
  transform: scale(0.4);
  transform-origin: left top;
  padding: 4px 8px;
  border-radius: 4px;
  z-index: 99;
}

.narrator-man {
  background-color: #04A6F2;
  color: #7FDEFC;
}

.narrator-woman {
  background-color: #F6E5E3;
  color: #FF6146;
}