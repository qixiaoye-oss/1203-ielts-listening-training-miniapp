.label-list-base-container {
  width: 100%;
  height: 100%;
  position: relative;
}

/* 显示部分 */
.label-list-container {
  height: 100vh;
  padding-top: 20px;
  /* 底部 padding 为按钮组预留空间：按钮组高度约110px + 底部距离20px + 渐变15px */
  padding-bottom: 150px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.label-item-cell {
  margin-inline: 20px;
}

.big-sentence-cell {
  border: 1px solid var(--question-color);
  border-radius: 9px;
}

.sentence__content {
  display: flex;
  align-items: flex-start;
  gap: 10px;
  padding: 15px 15px;
}

.tag--transparent {
  background-color: var(--question-color);
  color: #ffffff;
}

.my__label {
  border-top: 1px solid var(--question-color);
  padding: 15px 15px;
}

.active {
  border-color: var(--question-color);
}

/* 我的听写 */
.answer-cell {
  border: 1px dashed var(--dashed-border-color);
  position: relative;
  padding: 15px;
}

.answer-title {
  font-size: 12px;
  line-height: 1;
  color: rgba(0, 0, 0, 0.3);
  margin-bottom: 10px;
}

.label-content-cell {
  font-size: 16px;
  line-height: 1.4;
  overflow: hidden;
}

.hidden__ {
  background-color: var(--background-color-6);
}

.edit-but {
  margin-top: 10px;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  overflow: hidden;
  font-size: 14px;
  color: rgba(0, 0, 0, 0.3);
}

/* 功能按钮 */
.buts-cell {
  margin-top: 10px;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.buts-cell view {
  margin-left: 10px;
}

.buts-cell view:first-child {
  margin-left: 0;
}



/* 复习按钮 */
.again-buts-cell {
  margin-top: 10px;
  display: flex;
  align-items: flex-start;
  justify-content: flex-end;
}

.again-but {
  border: 1px solid var(--border-color-4);
  border-radius: 6px;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  padding-inline: 10px;
  margin-left: 10px;
  box-sizing: border-box;
}

.but-warning {
  color: rgba(248, 49, 47, 1);
  border: 1px solid rgba(248, 49, 47, 1);
}

.warning-bg {
  background: rgba(248, 49, 47, 0.15);
  border-color: transparent;
}

.but-success {
  border: 1px solid rgba(0, 210, 106, 0.5);
  color: rgba(0, 210, 106, 1);
}

.success-bg {
  background: rgba(0, 210, 106, 0.1);
  border-color: transparent;
}

.state {
  height: 40px;
  line-height: 40px;
  padding-inline: 10px;
  border-radius: 6px;
  margin-right: auto;
}

.but-animation {
  animation-name: butChange;
  animation-duration: 0.3s;
}

@keyframes butChange {
  0% {
    transform: scale(1);
  }

  50% {
    transform: scale(0.9);
  }

  100% {
    transform: scale(1);
  }
}